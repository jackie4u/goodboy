@inject NavigationManager NavManager

<MudCard Class="mud-elevation-8" Style="width: 300px; height: 450px;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Product.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Image="@(!string.IsNullOrWhiteSpace(Product.MainPicture) ? Product.MainPicture : "https://via.placeholder.com/286x190.jpg?text=No+Product+Image")"
                  Style="height:250px; width:auto; object-fit: cover; object-position: top;" />
    <MudCardContent>
        <MudText>@Product.Description</MudText>
        @if (Product.Categories.Any())
        {
            <MudText>Category: @string.Join(", ", Product.Categories.Select(c => c.ToString()))</MudText>
        }
        <MudText>Price: @Product.Price @Product.Currency</MudText>
        <MudText>Quantity: @Product.Quantity</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => NavManager.NavigateTo($"/product/{Product.Id}"))">View Details</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter, EditorRequired] public ProductDto Product { get; set; } = default!;
}